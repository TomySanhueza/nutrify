<div class="chat-new-page">
  <div class="chat-header">
    <h1>New Chat for <%= @patient.first_name %></h1>
  </div>

  <div class="chat-form-container">
    <%= simple_form_for([@patient, @chat], html: { class: "chat-form" }) do |f| %>
      <div class="form-group">
        <%= f.label :title, "TITLE", class: "form-label" %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      
      <div class="chat-form-actions">
        <%= link_to "Back", patient_chats_path(@patient), class: "btn-back-chat" %>
        <%= f.submit "Create Chat", class: "btn-create-chat" %>
      </div>
    <% end %>
  </div>
</div>
