<%= form_with(model: patient, local: true) do |f| %>
  <% if patient.errors.any? %>
    <div class="alert alert-danger">
      <h4>Hay <%= patient.errors.count %> errores:</h4>
      <ul>
        <% patient.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: "form-control" %>
    </div>

    <div class="col-md-6">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-md-4">
      <%= f.label :birthday %>
      <%= f.date_field :birthday, class: "form-control" %>
    </div>

    <div class="col-md-4">
      <%= f.label :weight %>
      <%= f.number_field :weight, step: 0.1, class: "form-control" %>
    </div>

    <div class="col-md-4">
      <%= f.label :height %>
      <%= f.number_field :height, step: 0.01, class: "form-control" %>
    </div>
  </div>

  <div class="mt-3">
    <%= f.label :nutrition_plan %>
    <%= f.text_area :nutrition_plan, class: "form-control", rows: 3 %>
  </div>

  <div class="mt-3">
    <%= f.label :clinical_history %>
    <%= f.text_area :clinical_history, class: "form-control", rows: 3 %>
  </div>

  <div class="mt-4 d-flex justify-content-between">
    <%= link_to "Cancelar", patients_path, class: "btn btn-secondary" %>
    <%= f.submit patient.persisted? ? "Actualizar Paciente" : "Crear Paciente", class: "btn btn-primary" %>
  </div>
<% end %>