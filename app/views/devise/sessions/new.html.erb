<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <h2>Log in</h2>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "auth-form" }) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    label: "Email",
                    placeholder: "tu@email.com",
                    wrapper_html: { class: "form-group" },
                    input_html: { autocomplete: "email", class: "form-control-custom" } %>
        <%= f.input :password,
                    required: false,
                    label: "Password",
                    placeholder: "Tu contraseÃ±a",
                    wrapper_html: { class: "form-group" },
                    input_html: { autocomplete: "current-password", class: "form-control-custom" } %>
        <%= f.input :remember_me, 
                    as: :boolean, 
                    label: "Remember me",
                    wrapper_html: { class: "form-group checkbox-group" },
                    input_html: { class: "form-check-input" } if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn-auth" %>
      </div>
    <% end %>

    <div class="auth-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
