<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <h2>Sign up</h2>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "auth-form" }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    label: "Email",
                    placeholder: "tu@email.com",
                    wrapper_html: { class: "form-group" },
                    input_html: { autocomplete: "email", class: "form-control-custom" } %>
        <%= f.input :password,
                    required: true,
                    label: "Password",
                    placeholder: "Mínimo 6 caracteres",
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    wrapper_html: { class: "form-group" },
                    input_html: { autocomplete: "new-password", class: "form-control-custom" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    label: "Password confirmation",
                    placeholder: "Confirma tu contraseña",
                    wrapper_html: { class: "form-group" },
                    input_html: { autocomplete: "new-password", class: "form-control-custom" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up", class: "btn-auth" %>
      </div>
    <% end %>

    <div class="auth-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
